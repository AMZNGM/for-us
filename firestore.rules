rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // full updates only by author
      allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;

      // comments subcollection
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
        allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
        // likes under comments
        match /likes/{likeId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null && likeId == request.auth.uid && request.resource.data.userId == request.auth.uid;
          allow delete: if request.auth != null && likeId == request.auth.uid;
          allow update: if false;
        }
      }

      // likes subcollection
      match /likes/{likeId} {
        // any authenticated user may read likes
        allow read: if request.auth != null;
        // can create a like doc only for themselves and must set userId to their uid
        allow create: if request.auth != null && likeId == request.auth.uid && request.resource.data.userId == request.auth.uid;
        // can delete their own like
        allow delete: if request.auth != null && likeId == request.auth.uid;
        allow update: if false;
      }
    }
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    match /notifications/{notifId} {
      allow create: if request.auth != null && request.resource.data.fromUserId == request.auth.uid;
      allow read: if request.auth != null && (request.auth.uid == resource.data.toUserId || request.auth.uid == resource.data.fromUserId);
      allow update: if request.auth != null && (request.auth.uid == resource.data.toUserId || request.auth.uid == resource.data.fromUserId);
      allow delete: if request.auth != null && request.auth.uid == resource.data.toUserId;
    }
    match /sharedTodos/{todoId} {
      allow read: if request.auth != null; // Any authenticated user can read all todos
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.assignedTo &&
        request.resource.data.assignedTo.size() >= 2 &&
        request.resource.data.createdBy == request.auth.uid;
      allow update: if request.auth != null; // Any authenticated user can update todos
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy; // Only creator can delete
    }
  }
}
